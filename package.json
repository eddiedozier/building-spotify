{
    "name": "building-spotify",
    "description": "How to build Spotify",
    "version": "0.1.0",
    "license": "MIT",
    "keywords": [
        "svelte",
        "tailwindcss",
        "user interfaces",
        "javascript",
        "tutorial"
    ],
    "repository": {
        "type": "git",
        "url": "git://github.com/eddiedozier/building-spotify.git"
    },
    "homepage": "https://github.com/eddiedozier/building-spotify",
    "author": {
        "name": "Eddie Dozier",
        "email": "dev@eddiedozier.com",
        "url": "https://github.com/eddiedozier"
    },
    "scripts": {
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "start:dev": "sirv public --dev -s -c -p 5000",
        "start": "sirv public -s -p 5000",
        "lint:eslint": "eslint ./src --ext .svelte --ignore-path .gitignore",
        "lint:eslint:fix": "eslint --ignore-path .gitignore --fix",
        "lint:staged": "lint-staged"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,md}": [
            "npm run lint:eslint:fix",
            "git add --force"
        ],
        "*.json": [
            "prettier --write",
            "git add --force"
        ]
    },
    "devDependencies": {
        "svelte": "3.22.3",
        "svelte-preprocess": "3.7.4",
        "tailwindcss": "1.4.6",
        "@fullhuman/postcss-purgecss": "2.1.2",
        "@rollup/plugin-commonjs": "11.1.0",
        "@rollup/plugin-json": "4.0.3",
        "@rollup/plugin-node-resolve": "7.1.3",
        "autoprefixer": "9.7.6",
        "dotenv-webpack": "1.7.0",
        "eslint": "6.8.0",
        "eslint-config-prettier": "6.11.0",
        "eslint-plugin-prettier": "3.1.3",
        "eslint-plugin-svelte3": "2.7.3",
        "husky": "4.2.5",
        "lint-staged": "10.1.7",
        "node-sass": "4.14.0",
        "postcss": "7.0.27",
        "postcss-load-config": "2.1.0",
        "prettier": "2.0.5",
        "rimraf": "3.0.2",
        "rollup": "2.7.3",
        "rollup-plugin-includepaths": "0.2.3",
        "rollup-plugin-livereload": "1.2.0",
        "rollup-plugin-svelte": "5.2.1",
        "rollup-plugin-terser": "5.3.0",
        "stylelint-config-recommended": "3.0.0"
    },
    "dependencies": {
        "alpinejs": "2.3.5",
        "sirv-cli": "0.4.5",
        "svelte-routing": "1.4.2"
    }
}
